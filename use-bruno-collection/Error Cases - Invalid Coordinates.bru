meta {
  name: Error Cases - Invalid Coordinates
  type: http
  seq: 6
}

get {
  url: {{baseUrl}}/api/environmental-quality?lat=invalid&lng=invalid
  body: none
  auth: none
}

params:query {
  lat: invalid
  lng: invalid
}

tests {
  test("should return 400 for invalid coordinates", function() {
    expect(res.getStatus()).to.equal(400);
    
    const error = res.getBody();
    expect(error).to.have.property("error");
    expect(error.error).to.include("Invalid coordinates");
  });
}